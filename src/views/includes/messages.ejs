<% if (errors.length > 0) { %>
    <div class="row">
      <div class="col my-3">
        <div class="alert alert-danger" style="margin: 0 auto; width: 30%;">
          <% errors.forEach(erro => { %>
          <%= erro %><br>
          <% }); %>
        </div>
      </div>
    </div>
    <% } %>
    
    <% if (success.length > 0) { %>
    <div class="row">
      <div class="col my-3">
        <div class="alert alert-success text-center" style="margin: 0 auto; width: 30%;">
          <% success.forEach(success => { %>
          <%= success %><br>
          <% }); %>
        </div>
      </div>
    </div>
    <% } %>