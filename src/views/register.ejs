<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-2"></div>
    <div class="col-8 my-3">
      <h1 class="text-center">Criar conta</h1>
      <p class="text-center lead">Crie sua conta preenchendo os campos abaixo</p>

      <%- include('includes/messages') %>
            <form class="form-cadastro" action="/login/register" method="POST">
              <input type="hidden" name="_csrf" value=<%= csrfToken %>>
              <div class="form-group">
                <label>Seu nome:</label>
                <input type="text" class="form-control" name="nome">
              </div>
              <div class="form-group">
                <label>Seu e-mail</label>
                <input type="email" class="form-control" name="email">
              </div>
              <div class="form-group">
                <label>Sua senha</label>
                <input type="password" class="form-control" name="senha">
              </div>
              <button style="background-color: rgb(17, 86, 102);" type="submit" class="btn btn-primary">Criar minha conta</button>
              <p style="margin-top: 10px; margin-bottom: -10px;" class="text-center">Já possuí conta? <br>
                <a href="/login/index">Faça Login</a></p>
            </form>
    </div>
    <div class="col-2"></div>
  </div>
</div>

<%- include('includes/footer') %>