<%- include('includes/head') %>
<%- include('includes/nav') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class="text-center">Entrar em sua conta</h1>
      <p class="text-center lead">Faça login preenchendo os campos abaixo</p>

      <%- include('includes/messages') %>

      <div>
          <form class="form-login" action="/login/index" method="POST">
            <input type="hidden" name="_csrf" value=<%= csrfToken %>>
            <div class="form-group">
              <label>Seu e-mail</label>
              <input type="email" class="form-control" name="email">
            </div>
            <div class="form-group">
              <label>Sua senha</label>
              <input type="password" class="form-control" name="senha">
            </div>
            <button style="background-color: rgb(17, 86, 102);"type="submit" class="btn btn-primary">Entrar</button>

            <p style="margin-top: 10px; margin-bottom: -10px;" class="text-center">Ainda não possuí conta? <br>
              <a href="/login/register">Cadastre-se Aqui!</a></p>
          </form>
          
        </div>

      </div>

    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer') %>